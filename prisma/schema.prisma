// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER) // O valor padrão da enum "Role"
  createdAt DateTime @default(now())
  clients   Client[] // Relacionamento com clientes que o usuário (vendedor) pode ter
}

model Client {
  id         Int      @id @default(autoincrement())
  name       String
  email      String   @unique
  phone      String
  sellerId   Int?     // Relaciona o cliente ao vendedor
  seller     User?    @relation(fields: [sellerId], references: [id]) // Relacionado ao vendedor
  createdAt  DateTime @default(now())
}

enum Role {
  ADMIN
  SELLER
  USER // Valor padrão para um usuário normal
}


model seller {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}


